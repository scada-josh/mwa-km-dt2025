    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/server.ts",
    "src/socket-io.ts"
  ]
}
